<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_student_grades_view_tree" model="ir.ui.view">
            <field name="name">student.grades.view.tree</field>
            <field name="model">student.grades.view</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Student Grades">
                    <field name="academic_year" />
                    <field name="class_id" />
                    <field name="subject_id" />
					<field name="faculty_id" />
					<field name="grade" />
                </tree>
            </field>
        </record>
        <record id="view_student_grades_view_form" model="ir.ui.view">
            <field name="name">student.grades.view.form</field>
            <field name="model">student.grades.view</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Student Grades">
                    <sheet>
                        <group colspan="4">
							<field name="academic_year" />
							<field name="class_id" />
							<field name="subject_id" />
							<field name="faculty_id" />
							<field name="grade" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_student_grades_view_search" model="ir.ui.view">
            <field name="name">student.grades.view.search</field>
            <field name="model">student.grades.view</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Student Grades">
                    <field name="academic_year" />
                    <field name="class_id" />
                    <field name="subject_id" />
					<field name="faculty_id" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Academic Year" domain="[]" context="{'group_by':'academic_year'}" />
                        <filter string="Class" domain="[]" context="{'group_by':'class_id'}" />
                        <filter string="Subject" domain="[]" context="{'group_by':'subject_id'}" />
                        <filter string="Faculty" domain="[]" context="{'group_by':'faculty_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_student_grades_view_view">
            <field name="name">Student Grades</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.grades.view</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_student_grades_view_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_student_grades_view_view_form">
            <field name="act_window_id" ref="act_open_student_grades_view_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_student_grades_view_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_student_grades_view_view_tree">
            <field name="act_window_id" ref="act_open_student_grades_view_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_student_grades_view_tree" />
        </record>
    </data>
</openerp>
