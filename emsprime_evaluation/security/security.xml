<openerp>
	<data>

		<record id="backoffice_admin_evaluations_edit" model="ir.rule">
            <field name="name">Allow : Evaluations Update</field>
            <field ref="model_ems_evaluation" name="model_id"/>
            <field name="domain_force">[('state','!=','published')]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('emsprime_core.group_ems_back_office_admin'))]"/>
        </record>

        <record id="evaluations_edit_restrict" model="ir.rule">
            <field name="name">Restrict : Evaluations Update</field>
            <field ref="model_ems_evaluation" name="model_id"/>
            <field name="domain_force">[('state','not in',('done', 'published'))]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('emsprime_core.group_ems_applicant')), (4, ref('emsprime_core.group_ems_student')), (4, ref('emsprime_core.group_ems_faculty')), (4, ref('emsprime_core.group_ems_back_office')), (4, ref('emsprime_core.group_ems_admin_sga'))]"/>
        </record>

    </data>
</openerp>