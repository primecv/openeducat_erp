<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_ems_student_status_tree" model="ir.ui.view">
            <field name="name">ems.student.status.tree</field>
            <field name="model">ems.student.status</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Student Status">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>
        <record id="view_ems_student_status_form" model="ir.ui.view">
            <field name="name">ems.student.status.form</field>
            <field name="model">ems.student.status</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Student Status">
                    <sheet>
                        <group col="4">
							<field name="name" />
							<field name="code" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_ems_student_status_search" model="ir.ui.view">
            <field name="name">ems.student.status.search</field>
            <field name="model">ems.student.status</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Student Status">
					<field name="name" />
					<field name="code" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Status" domain="[]"
                            context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>
		
        <record model="ir.actions.act_window" id="act_open_ems_student_status_view">
            <field name="name">Student Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ems.student.status</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_ems_student_status_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_student_status_view_form">
            <field name="act_window_id" ref="act_open_ems_student_status_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ems_student_status_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_student_status_view_tree">
            <field name="act_window_id" ref="act_open_ems_student_status_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ems_student_status_tree" />
        </record>

    </data>
</openerp>
