<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_ems_scholarship_tree" model="ir.ui.view">
            <field name="name">ems.scholarship.tree</field>
            <field name="model">ems.scholarship</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Scholarship">
                    <field name="name" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="student_id" />
                </tree>
            </field>
        </record>
        <record id="view_ems_scholarship_form" model="ir.ui.view">
            <field name="name">ems.scholarship.form</field>
            <field name="model">ems.scholarship</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Scholarship">
                    <sheet>
                        <group col="4">
							<field name="name" />
							<field name="start_date" />
							<field name="end_date" />
							<field name="student_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_ems_scholarship_search" model="ir.ui.view">
            <field name="name">ems.scholarship.search</field>
            <field name="model">ems.scholarship</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Scholarship">
					<field name="name" />
					<field name="student_id" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Status" domain="[]"
                            context="{'group_by':'name'}" />
						<filter string="Student" domain="[]" context="{'group_by':'student_id'}" />
                    </group>
                </search>
            </field>
        </record>
		
        <record model="ir.actions.act_window" id="act_open_ems_scholarship_view">
            <field name="name">Scholarship</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ems.scholarship</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_ems_scholarship_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_scholarship_view_form">
            <field name="act_window_id" ref="act_open_ems_scholarship_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ems_scholarship_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_scholarship_view_tree">
            <field name="act_window_id" ref="act_open_ems_scholarship_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ems_scholarship_tree" />
        </record>

    </data>
</openerp>
