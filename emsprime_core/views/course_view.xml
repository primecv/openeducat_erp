<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_ems_course_tree" model="ir.ui.view">
            <field name="name">ems.course.tree</field>
            <field name="model">ems.course</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Course">
                    <field name="name" />
                    <field name="code" />
                    <field name="section" invisible="1"/>
                    <field name="evaluation_type"  invisible="1"/>
					<field name="degree_id"/>
                    <field name="parent_id"  invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="view_ems_course_form" model="ir.ui.view">
            <field name="name">ems.course.form</field>
            <field name="model">ems.course</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Course">
                    <sheet>
		                <div class="oe_title">
		                    <label for="name" class="oe_edit_only"/>
		                    <h2><field name="name" placeholder="Course Name..."/></h2>
		                </div>
						<group colspan="4" col="4" name="main">
							<field name="code" />
							<field name="section" />
							<field name="evaluation_type" />
							<field name="degree_id" widget="selection"/>
							<field name="parent_id" />
							<field name="active"/>
						</group>
                        <notebook colspan="4">						
                            <!--<page name="subjects" string="Subjects">						
								<group name="subject">
									<separator string="Subjects" colspan="4"/> 
									<field name="subject_line" nolabel="1">
										<tree string="Subjects" editable="bottom">
											<field name="subject_id" required="1"/>
											<field name="semester"/>
											<field name="week_work_load" widget="float_time"/>
											<field name="student_contact" widget="float_time"/>
											<field name="work"/>
											<field name="ects"/>
										</tree>
									</field>
								</group>
							</page>-->
                            <page name="attachments" string="Attachments">													
								<group col="4" colspan="4">
									<separator colspan="4" string="Attachments" />
									<field name="attachment_line" colspan="4" nolabel="1">
										<tree string="Attachments">
											<field name="attachment_type_id" />
											<field name="attachment" filename="dates_fname" />
											<field name="dates_fname" select="1" invisible="1"/>
										</tree>
										<form string="Attachment">
											<group col="4">
												<field name="attachment_type_id" />
												<field name="attachment" filename="dates_fname" widget="binary" />
												<field name="dates_fname" select="1" invisible="1" />
											</group>
										</form>
									</field>
								</group>
							</page>
                        </notebook>							
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_ems_course_search" model="ir.ui.view">
            <field name="name">ems.course.search</field>
            <field name="model">ems.course</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Course">
                    <field name="name" />
                    <field name="code" />
<!--                    <field name="section" /> -->
                    <field name="evaluation_type" />
					<field name="degree_id"/>
					<filter string="Active" domain="[('active','=',True)]" name="filter_active"/>
					<filter string="Inactive" domain="[('active','=',False)]" name="filter_inactive"/>
                    <newline />
                    <field name="parent_id" />
                    <newline />
                    <group expand="0" string="Group By...">
						<filter name="degree" string="Degree" domain="[]" 
							context="{'group_by':'degree_id'}"/>
                        <filter string="Evaluation Type" domain="[]"
                            context="{'group_by':'evaluation_type'}" />
                        <filter string="Parent Course" domain="[]"
                            context="{'group_by':'parent_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_ems_course_view">
            <field name="name">Courses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ems.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_ems_course_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_course_view_form">
            <field name="act_window_id" ref="act_open_ems_course_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ems_course_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_course_view_tree">
            <field name="act_window_id" ref="act_open_ems_course_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ems_course_tree" />
        </record>
    </data>
</openerp>
