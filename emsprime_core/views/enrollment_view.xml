<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_ems_enrollment_tree" model="ir.ui.view">
            <field name="name">ems.enrollment.tree</field>
            <field name="model">ems.enrollment</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Roll Number">
                    <field name="roll_number" />
                    <field name="student_id" />
                    <field name="course_id" />
                    <field name="edition_id" />
					<field name="type" />
                </tree>
            </field>
        </record>
        <record id="view_ems_enrollment_form" model="ir.ui.view">
            <field name="name">ems.enrollment.form</field>
            <field name="model">ems.enrollment</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Roll Number">
					<header>
						<button name="action_validate" type="object" string="Validate" attrs="{'invisible':['|',('state','!=','draft'),('type','!=','M')]}" class="oe_highlight"/>
						<field name="state" widget="statusbar"/>
					</header>
                    <sheet>
                        <group col="4">
                            <field name="type" />
                            <field name="student_id" />
                            <field name="course_id" />
                            <field name="edition_id" context="{'course_id': course_id,'get_parent_edition':1}" />
                            <field name="roll_number" />
							<field name="period" attrs="{'invisible':[('type','not in',('I','C'))]}"/>
							<field name="academic_year" required="0"/>
							<field name="course_year"/>
                        </group>
						<!--group>
							<group>
								<button name="action_load_subjects" type="object" string="Course Subjects" attrs="{'invisible':[('type','!=','I')]}"/>
							</group>
							<group/>
						</group-->
						<group string="Subjects" attrs="{'invisible':[('type','!=','I')]}" invisible="1">
							<field name="subject_ids_copy" invisible="1"/><newline/>
							<field name="subject_ids" nolabel="1" attrs="{'invisible':[('type','!=','I')], 'readonly':[('course_id','=',False)]}" domain="[('id','in',(subject_ids_copy[0][2]))]"/>
						</group>
						<group string="Subjects" attrs="{'invisible':[('type','!=','I')]}">
							<field name="subject_line" attrs="{'required':[('type','=','I')]}" nolabel="1" colspan="4"  context="{'default_period': period}">
								<tree string="Subjects" editable="top">
									<field name="subject_id" required="1" context="{'inscription': True, 'edition_id': parent.edition_id}"/>
									<field name="semester"/>
									<field name="period"/>
									<field name="semester_copy" invisible="1"/>
									<field name="ect"/>
									<field name="ect_copy" invisible="1"/>
									<field name="grade"/>
									<field name="evaluation_type"/>
								</tree>
							</field>
						</group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_ems_enrollment_inscription_form" model="ir.ui.view">
            <field name="name">ems.enrollment.inscription.form</field>
            <field name="model">ems.enrollment</field>
            <field name="priority" eval="22" />
            <field name="arch" type="xml">
                <form string="Inscription">
					<header>
						<button name="action_validate" type="object" string="Validate" attrs="{'invisible':['|',('state','!=','draft'),('type','!=','M')]}" class="oe_highlight"/>
						<field name="state" widget="statusbar"/>
					</header>
                    <sheet>
                        <group col="4">
                            <field name="type" readonly="1"/>
                            <field name="student_id" />
                            <field name="course_id" />
                            <field name="edition_id" context="{'course_id': course_id,'get_parent_edition':1}" />
                            <field name="roll_number" />
							<field name="period" attrs="{'invisible':[('type','not in',('I','C'))]}"/>
							<field name="academic_year" required="0"/>
							<field name="course_year"/>
                        </group>
						<!--group>
							<group>
								<button name="action_load_subjects" type="object" string="Course Subjects" attrs="{'invisible':[('type','!=','I')]}"/>
							</group>
							<group/>
						</group-->
						<group string="Subjects" attrs="{'invisible':[('type','!=','I')]}" invisible="1">
							<field name="subject_ids_copy" invisible="1"/><newline/>
							<field name="subject_ids" nolabel="1" attrs="{'invisible':[('type','!=','I')], 'readonly':[('course_id','=',False)]}" domain="[('id','in',(subject_ids_copy[0][2]))]"/>
						</group>
						<group string="Subjects" attrs="{'invisible':[('type','!=','I')]}">
							<field name="subject_line" attrs="{'required':[('type','=','I')]}" nolabel="1" colspan="4"  context="{'default_period': period}">
								<tree string="Subjects" editable="top">
									<field name="subject_id" required="1" context="{'inscription': True, 'edition_id': parent.edition_id}"/>
									<field name="semester"/>
									<field name="period"/>
									<field name="semester_copy" invisible="1"/>
									<field name="ect"/>
									<field name="ect_copy" invisible="1"/>
									<field name="grade"/>
									<field name="evaluation_type"/>
								</tree>
							</field>
						</group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_ems_enrollment_inscription_student_form" model="ir.ui.view">
            <field name="name">ems.enrollment.inscription.form</field>
            <field name="model">ems.enrollment</field>
            <field name="priority" eval="24" />
            <field name="arch" type="xml">
                <form string="Inscription">
					<header>
						<button name="action_validate" type="object" string="Validate" attrs="{'invisible':['|',('state','!=','draft'),('type','!=','M')]}" class="oe_highlight"/>
						<field name="state" widget="statusbar"/>
					</header>
                    <sheet>
	                    <field name="photo" widget="image" class="oe_left oe_avatar" />
	                    <div name="title_name" class="oe_title">
							<h3><field name="student_roll_number" required="0" readonly="1" class="oe_inline"/></h3>
                            <h1><table>
                                <tr>
                                <td><field name="first_name" readonly="1" style="padding-right:10px"/></td>
                                <td><field name="middle_name" readonly="1" style="padding-right:10px"/></td>
                                <td><field name="last_name" readonly="1" style="padding-right:10px"/></td>
                                </tr>
                                </table>
                            </h1>
						</div>
                        <group col="4">
                            <field name="type" readonly="1" invisible="1"/>
							<field name="student_id" readonly="1" invisible="1" options="{'no_open':1}"/><newline/>
                            <field name="course_id" readonly="1"/>
                            <field name="edition_id" context="{'course_id': course_id,'get_parent_edition':1}" readonly="1"/>
							<field name="course_year"/>
							<field name="academic_year" required="0"/>
							<field name="roll_number" required="0" readonly="1" string="Number"/>
							<field name="period" attrs="{'invisible':[('type','not in',('I','C'))]}"/>
                        </group>
						<group string="Subjects" attrs="{'invisible':[('type','!=','I')]}">
							<field name="subject_line" attrs="{'required':[('type','=','I')]}" nolabel="1" colspan="4"  context="{'default_period': period, 'default_edition_id': edition_id}">
								<tree string="Subjects" editable="top">
									<field name="subject_id" required="1" context="{'inscription': True, 'edition_id': edition_id}"/>
									<field name="semester"/>
									<field name="period"/>
									<field name="semester_copy" invisible="1"/>
									<field name="ect"/>
									<field name="ect_copy" invisible="1"/>
									<field name="grade"/>
									<field name="evaluation_type"/>
									<field name="edition_id" invisible="1"/>
								</tree>
							</field>
						</group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_ems_enrollment_search" model="ir.ui.view">
            <field name="name">ems.enrollment.search</field>
            <field name="model">ems.enrollment</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Roll Number">
                    <field name="roll_number" />
					<field name="state"/>
                    <field name="student_id" />
                    <field name="course_id" />
                    <field name="edition_id" />
					<field name="university_center_id"/>
					<field name="type" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Roll Number" domain="[]"
                            context="{'group_by':'roll_number'}" />
						<filter string="State" domain="[]" context="{'group_by':'state'}" />
                        <filter string="Course" domain="[]" context="{'group_by':'course_id'}" />
                        <filter string="Edition" domain="[]" context="{'group_by':'edition_id'}" />
                        <filter string="Student" domain="[]" context="{'group_by':'student_id'}" />
                        <filter string="University Center" domain="[]" context="{'group_by':'university_center_id'}" />
                        <filter string="Type" domain="[]" context="{'group_by':'type'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="view_ems_enrollment_inscription_search" model="ir.ui.view">
            <field name="name">ems.enrollment.search</field>
            <field name="model">ems.enrollment</field>
            <field name="priority" eval="20" />
            <field name="arch" type="xml">
                <search string="Roll Number">
                    <field name="roll_number" />
					<field name="state"/>
                    <field name="student_id" />
                    <field name="course_id" />
                    <field name="edition_id" />
					<field name="university_center_id"/>
					<field name="year"/>
					<field name="type" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Roll Number" domain="[]"
                            context="{'group_by':'roll_number'}" />
						<filter name="group_by_state" string="State" domain="[]" context="{'group_by':'state'}" />
                        <filter name="group_by_university_center" string="University Center" domain="[]" context="{'group_by':'university_center_id'}" />
                        <filter name="group_by_course" string="Course" domain="[]" context="{'group_by':'course_id'}" />
                        <filter name="group_by_edition" string="Edition" domain="[]" context="{'group_by':'edition_id'}" />
                        <filter name="group_by_student" string="Student" domain="[]" context="{'group_by':'student_id'}" />
                        <filter name="group_by_year" string="Year" domain="[]" context="{'group_by':'year'}" />
                        <filter name="group_by_type" string="Type" domain="[]" context="{'group_by':'type'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="view_enrollment_pivot">
            <field name="name">ems.enrollment.pivot</field>
            <field name="model">ems.enrollment</field>
            <field name="arch" type="xml">
                <pivot string="Enrollments">
                    <field name="course_id" type="row"/>
					<field name="state" type="col"/>
                </pivot>
            </field>
        </record>
        <record model="ir.ui.view" id="view_enrollment_graph">
            <field name="name">ems.enrollment.graph</field>
            <field name="model">ems.enrollment</field>
            <field name="arch" type="xml">
                <graph string="Enrollments">
                    <field name="course_id"/>
                </graph>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_ems_enrollment_view">
            <field name="name">Enrollments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ems.enrollment</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph,pivot,tree,form</field>
            <field name="search_view_id" ref="view_ems_enrollment_search" />
            <field name="domain">[('type','=','M')]</field>
            <field name="context">{'default_type':'M'}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_enrollment_view_form">
            <field name="act_window_id" ref="act_open_ems_enrollment_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ems_enrollment_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_enrollment_view_tree">
            <field name="act_window_id" ref="act_open_ems_enrollment_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ems_enrollment_tree" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_enrollment_view_pivot">
            <field name="act_window_id" ref="act_open_ems_enrollment_view" />
            <field name="sequence" eval="5" />
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="view_enrollment_pivot" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_enrollment_view_graph">
            <field name="act_window_id" ref="act_open_ems_enrollment_view" />
            <field name="sequence" eval="3" />
            <field name="view_mode">graph</field>
            <field name="view_id" ref="view_enrollment_graph" />
        </record>
		<!--Candidates Menu-->
        <record model="ir.actions.act_window" id="act_open_ems_candidate_enrollment_view">
            <field name="name">Candidates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ems.enrollment</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph,pivot,tree,form</field>
            <field name="search_view_id" ref="view_ems_enrollment_search" />
            <field name="domain">[('type','=','C')]</field>
            <field name="context">{'default_type': 'C'}</field>
        </record>
		<!--Inscription Menu-->
        <record model="ir.actions.act_window" id="act_open_ems_inscription_enrollment_view">
            <field name="name">Inscrições</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ems.enrollment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="search_view_id" ref="view_ems_enrollment_inscription_search" />
            <field name="domain">[('type','=','I')]</field>
            <field name="context">{'default_type': 'I', 'search_default_group_by_university_center':1, 'search_default_group_by_course': 1, 'search_default_group_by_year':1}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_ems_enrollment_inscription_form">
            <field name="act_window_id" ref="act_open_ems_inscription_enrollment_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ems_enrollment_inscription_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_enrollment_inscription_tree">
            <field name="act_window_id" ref="act_open_ems_inscription_enrollment_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ems_enrollment_tree" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_enrollment_inscription_pivot">
            <field name="act_window_id" ref="act_open_ems_inscription_enrollment_view" />
            <field name="sequence" eval="5" />
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="view_enrollment_pivot" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_enrollment_inscription_graph">
            <field name="act_window_id" ref="act_open_ems_inscription_enrollment_view" />
            <field name="sequence" eval="3" />
            <field name="view_mode">graph</field>
            <field name="view_id" ref="view_enrollment_graph" />
        </record>

		<!-- Grades -->
		<record id="ems_enrollment_inscription_grades_tree" model="ir.ui.view">
			<field name="name">ems.enrollment.inscription.grades.tree</field>
			<field name="model">ems.enrollment.inscription.subject</field>
			<field name="arch" type="xml">
				<tree string="Grades" create="0" nocreate="1">
					<field name="student_id"/>
					<field name="course_id"/>
					<field name="edition_id"/>
					<field name="subject_id"/>
					<field name="semester"/>
					<field name="grade"/>
				</tree>
			</field>
		</record>
		<record id="ems_enrollment_inscription_grades_search" model="ir.ui.view">
			<field name="name">ems.enrollment.inscription.grades.search</field>
			<field name="model">ems.enrollment.inscription.subject</field>
			<field name="arch" type="xml">
				<search string="Grades">
					<field name="student_id"/>
					<field name="course_id"/>
					<field name="edition_id"/>
					<field name="subject_id"/>
					<field name="semester"/>
					<field name="grade"/>
					<field name="ect"/>
					<field name="period"/>
					<field name="evaluation_type"/>
					<newline/>
					<group expand="0" string="Group By">
						<filter name="group_by_student" string="Student" domain="[]" context="{'group_by': 'student_id'}"/>
						<filter name="group_by_course" string="Course" domain="[]" context="{'group_by': 'course_id'}"/>
						<filter name="group_by_edition" string="Edition" domain="[]" context="{'group_by': 'edition_id'}"/>
						<filter name="group_by_subject" string="Subject" domain="[]" context="{'group_by': 'subject_id'}"/>
						<filter name="group_by_semester" string="Semester" domain="[]" context="{'group_by': 'semester'}"/>
						<filter name="group_by_grade" string="Grade" domain="[]" context="{'group_by': 'grade'}"/>
						<filter name="group_by_period" string="Period" domain="[]" context="{'group_by': 'period'}"/>
						<filter name="group_by_evaluation_type" string="Evaluation Type" domain="[]" context="{'group_by': 'evaluation_type'}"/>
					</group>
				</search>
			</field>
		</record>
		<record id="ems_enrollment_inscription_grades_pivot" model="ir.ui.view">
			<field name="name">ems.enrollment.inscription.grades.pivot</field>
			<field name="model">ems.enrollment.inscription.subject</field>
			<field name="arch" type="xml">
				<pivot string="Grades">
					<field name="course_id" type="row"/>
					<field name="grade" type="measure"/>
				</pivot>
			</field>
		</record>

		<record id="ems_enrollment_inscription_grades_action" model="ir.actions.act_window">
			<field name="name">Grades</field>
			<field name="res_model">ems.enrollment.inscription.subject</field>
			<field name="view_type">tree</field>
			<field name="view_mode">list,pivot</field>
			<field name="view_id" ref="ems_enrollment_inscription_grades_tree"/>
		</record>

    </data>
</openerp>
