<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="hr_location_action" model= "ir.actions.act_window">
            <field name="name">Locations</field>
            <field name="res_model">ems.location</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click create to add a new Location record.</p>
            </field>
        </record>

        <record id="hr_location_search_view" model= "ir.ui.view">
            <field name="name">hr.location.search.view</field>
            <field name="model">ems.location</field>
            <field name="arch" type="xml">
                <search string="Location search">
                    <field name="name"/>
                    <field name="level"/>
                    <group string="Group by">
                        <filter string="Level" name="level" domain="[]" context="{'group_by':'level'}"/>   
                        <!--filter string="Belongs to" name="parent" domain="[]" context="{'group_by':'parent_id'}"/-->                
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_location_tree_view" model= "ir.ui.view">
            <field name="name">hr.location.tree.view</field>
            <field name="view_type">tree</field>
            <field name="search_view_id" ref="hr_location_search_view"/>
            <field name="model">ems.location</field>
            <field name="arch" type="xml">
                <tree string="Locations">
                    <field name="level"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="hr_location_form_view" model= "ir.ui.view">
            <field name="name">hr.location.form.view</field>
            <field name="view_type">form</field>
            <field name="model">ems.location</field>
            <field name="arch" type="xml">
                <form string="Location">
					<sheet>
						<group col="4">
							<field name="name"/>
							<field name="parent_id"/>
							<field name="level"/>
							<field name="latitude"/>
							<field name="longitude"/>
						</group>
					</sheet>
                </form>
            </field>
        </record>    

		<!-- Location - Country -->
        <record id="hr_location_country_form_view" model= "ir.ui.view">
            <field name="name">hr.location.country.form.view</field>
            <field name="view_type">form</field>
            <field name="model">ems.location</field>
            <field name="arch" type="xml">
                <form string="Country">
					<sheet>
						<group col="4">
							<field name="name"/>
							<field name="level" readonly="1"/>
							<field name="latitude"/>
							<field name="longitude"/>
							<field name="citizenship"/>
							<field name="parent_id" invisible="1"/>
						</group>
					</sheet>
                </form>
            </field>
        </record>
        <record id="hr_location_country_action" model= "ir.actions.act_window">
            <field name="name">Countries</field>
            <field name="res_model">ems.location</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
			<field name="context">{'default_level': '1', 'level':True}</field>
			<field name="domain">[('level','=','1')]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click create to add a new Country record.</p>
            </field>
        </record>
        <record id="hr_location_country_action_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hr_location_tree_view"/>
            <field name="act_window_id" ref="hr_location_country_action"/>
        </record>
        <record id="hr_location_country_action_view2" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_location_country_form_view"/>
            <field name="act_window_id" ref="hr_location_country_action"/>
        </record>

		<!-- Location - Island -->
        <record id="hr_location_island_form_view" model= "ir.ui.view">
            <field name="name">hr.location.island.form.view</field>
            <field name="view_type">form</field>
            <field name="model">ems.location</field>
            <field name="arch" type="xml">
                <form string="Island">
					<sheet>					
						<group col="4">
							<field name="name"/>
							<field name="parent_id" domain="[('level','=','1')]" context="{'form_view_ref':'emsprime_core.hr_location_country_form_view', 'default_level':'1'}"/>
							<field name="level" readonly="1"/>
							<field name="latitude"/>
							<field name="longitude"/>
						</group>
					</sheet>
                </form>
            </field>
        </record>
        <record id="hr_location_island_action" model= "ir.actions.act_window">
            <field name="name">Islands</field>
            <field name="res_model">ems.location</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
			<field name="context">{'default_level': '2', 'level':True}</field>
			<field name="domain">[('level','=','2')]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click create to add a new Island record.</p>
            </field>
        </record>
        <record id="hr_location_island_action_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hr_location_tree_view"/>
            <field name="act_window_id" ref="hr_location_island_action"/>
        </record>
        <record id="hr_location_island_action_view2" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_location_island_form_view"/>
            <field name="act_window_id" ref="hr_location_island_action"/>
        </record>

		<!-- Location - County -->
        <record id="hr_location_county_form_view" model= "ir.ui.view">
            <field name="name">hr.location.county.form.view</field>
            <field name="view_type">form</field>
            <field name="model">ems.location</field>
            <field name="arch" type="xml">
                <form string="County">
					<sheet>
						<group col="4">
							<field name="name"/>
							<field name="parent_id" domain="[('level','=','2')]" context="{'form_view_ref':'emsprime_core.hr_location_island_form_view', 'default_level':'2'}"/>
							<field name="level" readonly="1"/>
							<field name="latitude"/>
							<field name="longitude"/>
						</group>
					</sheet>
                </form>
            </field>
        </record>
        <record id="hr_location_county_action" model= "ir.actions.act_window">
            <field name="name">Counties</field>
            <field name="res_model">ems.location</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
			<field name="context">{'default_level': '3', 'level':True}</field>
			<field name="domain">[('level','=','3')]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click create to add a new County record.</p>
            </field>
        </record>
        <record id="hr_location_county_action_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hr_location_tree_view"/>
            <field name="act_window_id" ref="hr_location_county_action"/>
        </record>
        <record id="hr_location_county_action_view2" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_location_county_form_view"/>
            <field name="act_window_id" ref="hr_location_county_action"/>
        </record>

		<!-- Location - Parish -->
        <record id="hr_location_parish_form_view" model= "ir.ui.view">
            <field name="name">hr.location.parish.form.view</field>
            <field name="view_type">form</field>
            <field name="model">ems.location</field>
            <field name="arch" type="xml">
                <form string="Parish">
					<sheet>
						<group col="4">
							<field name="name"/>
							<field name="parent_id" domain="[('level','=','3')]" context="{'form_view_ref':'emsprime_core.hr_location_county_form_view', 'default_level':'3'}"/>
							<field name="level" readonly="1"/>
							<field name="latitude"/>
							<field name="longitude"/>
						</group>
					</sheet>
                </form>
            </field>
        </record>
        <record id="hr_location_parish_action" model= "ir.actions.act_window">
            <field name="name">Parish</field>
            <field name="res_model">ems.location</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
			<field name="context">{'default_level': '4', 'level':True}</field>
			<field name="domain">[('level','=','4')]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click create to add a new Parish record.</p>
            </field>
        </record>
        <record id="hr_location_parish_action_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hr_location_tree_view"/>
            <field name="act_window_id" ref="hr_location_parish_action"/>
        </record>
        <record id="hr_location_parish_action_view2" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_location_parish_form_view"/>
            <field name="act_window_id" ref="hr_location_parish_action"/>
        </record>
    </data>
</openerp>














 
