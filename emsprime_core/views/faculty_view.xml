<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="kanban_view_faculty">
            <field name="name">Faculty Kanban</field>
            <field name="model">ems.faculty</field>
            <field name="arch" type="xml">
                <kanban class="o_hr_employee_kanban">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <a type="open">
                                        <img t-att-src="kanban_image('ems.faculty', 'photo', record.id.value)"
                                            class="oe_employee_picture" />
                                    </a>
                                </div>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                            <field name="name" />
                                            <t t-if="record.middle_name.raw_value">
                                                <field name="middle_name" />
                                            </t>
                                            <t t-if="record.last_name.raw_value">
                                                <field name="last_name" />
                                            </t>
                                        </a>
                                    </h4>
                                    <ul>
                                        <li t-if="record.contact_address.raw_value">
                                            Address:
                                            <field name="contact_address" />
                                        </li>
                                        <li t-if="record.phone.raw_value">
                                            Tel:
                                            <field name="phone" />
                                        </li>
                                        <li t-if="record.mobile.raw_value">
                                            Mobile:
                                            <field name="mobile" />
                                        </li>
                                        <li t-if="record.email.raw_value">
                                            <a t-attf-href="mailto:#{record.email.value}">
                                                <field name="email" />
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <script> $('.oe_employee_picture').load(function() {
                                if($(this).width() > $(this).height()) {
                                $(this).addClass('oe_employee_picture_wide') } });
                            </script>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_ems_faculty_tree" model="ir.ui.view">
            <field name="name">ems.faculty.tree</field>
            <field name="model">ems.faculty</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Faculty">
					<field name="complete_name"/>
					<field name="degree_id" />
					<field name="institutional_email" />
					<field name="mobile" />
                </tree>
            </field>
        </record>
        <record id="view_ems_faculty_form" model="ir.ui.view">
            <field name="name">ems.faculty.form</field>
            <field name="model">ems.faculty</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Faculty">
                <header groups="emsprime_core.group_ems_back_office_admin">
                    <button name="%(faculty_create_employee_act)d" string="Create Employee" type="action" class="oe_highlight" attrs="{'invisible': [('emp_id', '!=', False)]}"/>
                </header>
                    <sheet>
                        <field name="photo" widget="image" class="oe_left oe_avatar" />
                        <div class="oe_title">
                            <h1><table>
                                <tr>
                                <td><field name="name" required="1" placeholder="First Name" style="padding-right:10px" /></td>
                                <td><field name="middle_name" placeholder="Middle Name" style="padding-right:10px" /></td>
                                <td><field name="last_name" placeholder="Last Name" style="padding-right:10px" /></td>
                                </tr>
                                </table>
                            </h1>
                        </div>
                        <group col="6" colspan="4">
                            <field name="gender" />
                            <field name="phone" />
                            <field name="mobile" />
                            <field name="email" />
                            <field name="institutional_email" />
                        </group>
                        <notebook colspan="4">
                            <page name="personal_information" string="Personal Information">
                                <group col="4">
                                    <field name="birth_date" />
                                    <field name="nationality" />
									<field name="country_id" domain="[('level','=','1')]" context="{'form_view_ref':'emsprime_core.hr_location_country_form_view', 'default_level':'1'}"/>
									<field name="island_id" domain="[('level','=','2')]" context="{'form_view_ref':'emsprime_core.hr_location_island_form_view', 'default_level':'2'}"/>
									<field name="county_id" domain="[('level','=','3')]" context="{'form_view_ref':'emsprime_core.hr_location_county_form_view', 'default_level':'3'}"/>
									<field name="parish_id" domain="[('level','=','4')]" context="{'form_view_ref':'emsprime_core.hr_location_parish_form_view', 'default_level':'4'}"/>
                                    <field name="degree_id" />
                                    <field name="lang" />
                                    <field name='emp_id' />
                                </group>
                                <group string="Address Detail" name="address">
                                    <label for="street" string="Address" />
                                    <div name="div_address">
                                        <field name="street" placeholder="Street..." />
                                        <field name="street2" placeholder="Street2" />
                                        <div class="address_format">
                                            <field name="city" placeholder="City" style="width: 40%%" />
                                            <field name="zip" placeholder="ZIP" style="width: 20%%" />
                                        </div>
                                        <field name="country_id" placeholder="Country" class="oe_no_button"
                                            options='{"no_open": True}' />
                                    </div>
                                </group>
                            </page>
                            <page name="subjects" string="Subjects">
                                <field name="faculty_subject_ids" colspan="4" nolabel="1" />
                            </page>
                            <page name="attachment" string="Attachments">
                                <group col="4" colspan="4">
                                    <separator colspan="4" string="Attachments" />
                                    <field name="attachment_line" colspan="4" nolabel="1">
										<tree string="Attachments">
											<field name="attachment_type_id" />
											<field name="attachment" filename="dates_fname" />
											<field name="dates_fname" select="1" invisible="1"/>
										</tree>
										<form string="Attachment">
											<group col="4">
										        <field name="attachment_type_id" />
										        <field name="attachment" filename="dates_fname" widget="binary" />
										        <field name="dates_fname" select="1" invisible="1" />
											</group>
										</form>
									</field>
                                </group>
                            </page>								
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_ems_faculty_search" model="ir.ui.view">
            <field name="name">ems.faculty.search</field>
            <field name="model">ems.faculty</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Faculty">
                    <field name="complete_name" />
                    <field name="degree_id" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter name="degree" string="Degree" domain="[]"
                            context="{'group_by':'degree_id'}" />
                        <filter name="nationality" string="Nationality" domain="[]"
                            context="{'group_by':'nationality'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_ems_faculty_view">
            <field name="name">Faculties</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ems.faculty</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_ems_faculty_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
			<field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add Faculties.
              </p>
			</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_faculty_view_form">
            <field name="act_window_id" ref="act_open_ems_faculty_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ems_faculty_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_faculty_view_tree">
            <field name="act_window_id" ref="act_open_ems_faculty_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ems_faculty_tree" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_faculty_view_kanban">
            <field name="act_window_id" ref="act_open_ems_faculty_view" />
            <field name="sequence" eval="5" />
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="kanban_view_faculty" />
        </record>
    </data>
</openerp>
