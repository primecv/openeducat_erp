<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_ems_class_tree" model="ir.ui.view">
            <field name="name">ems.class.tree</field>
            <field name="model">ems.class</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Class">
                    <field name="name" />
                    <field name="course_id" />
                    <field name="edition_id"/>
					<field name="academic_year" />
                    <field name="faculty_id" />
					<field name="semester" />
                    <field name="subject_id" />
                    <field name="university_center_id"/>
                    <field name="student_ids" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="view_ems_class_form" model="ir.ui.view">
            <field name="name">ems.class.form</field>
            <field name="model">ems.class</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Class">
                    <sheet>
                        <group colspan="4" col="4" name="main">
							<field name="academic_year" />
                            <field name="university_center_id" required="1"/>
                            <field name="faculty_id" />
                            <!--<field name="subject_id" context="{'ems_class_filter_by_edition': True, 'course_id': course_id, 'edition_id': edition_id}"/>-->
                            <field name="subject_id" context="{'ems_class_filter_by_faculty': True, 'faculty_id': faculty_id}"/>
							<field name="course_id" />
                            <field name="edition_id" required="0" context="{'ems_class_filter_by_course': True, 'course_id': course_id, 'university_center_id': university_center_id}"/>
                            <field name="name" />
							<field name="semester"/>
							<!--<field name="semester_id" invisible="1"/>-->
                        </group>
                        <div name="button_box" class="oe_button_box">
							<button name="load_inscriptions" type="object" string="Load Enrollments" class="oe_stat_button" id="inscription_button" icon="fa-pencil-square-o"/>
						</div>
                        <group string="Students" name="subject">
                            <field name="enrollment_ids" nolabel="1" context="{'subject_academic_year_filter': True, 'subject_id': subject_id, 'academic_year': academic_year, 'university_center_id':university_center_id}">
								<tree string="Enrollment(s)">
								    <field name="roll_number" />
								    <field name="student_id" />
								    <field name="course_id" invisible="1"/>
								    <field name="edition_id" />
								</tree>
								<form string="Enrollment(s)">
									<group col="4">						
										<field name="roll_number" readonly="1"/>
										<field name="student_id" readonly="1"/>
										<field name="course_id" readonly="1"/>
										<field name="edition_id" readonly="1"/>
									</group>
								</form>
							</field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_ems_class_search" model="ir.ui.view">
            <field name="name">ems.class.search</field>
            <field name="model">ems.class</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Class">
                    <field name="name" />
                    <field name="faculty_id" />
                    <field name="subject_id" />
					<!--<field name="semester_id"/>-->
					<field name="academic_year"/>
                    <field name="university_center_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Faculty" domain="[]" context="{'group_by':'faculty_id'}"/>
                        <filter string="Academic Year" domain="[]" context="{'group_by':'academic_year'}"/>
                        <filter string="University Center" domain="[]" context="{'group_by':'university_center_id'}"/>
					</group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_ems_class_view">
            <field name="name">Classes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ems.class</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_ems_class_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_class_view_form">
            <field name="act_window_id" ref="act_open_ems_class_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ems_class_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_class_view_tree">
            <field name="act_window_id" ref="act_open_ems_class_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ems_class_tree" />
        </record>

        <!-- Faculties related Classes - My Classes -->
        <record model="ir.actions.act_window" id="act_open_faculties_ems_class">
            <field name="name">My Classes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ems.class</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_ems_class_search" />
            <field name="domain">[('faculty_id.user_id','=',uid)]</field>
            <field name="context">{}</field>
        </record>

    </data>
</openerp>
