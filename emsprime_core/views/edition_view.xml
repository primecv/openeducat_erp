<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_ems_edition_tree" model="ir.ui.view">
            <field name="name">ems.edition.tree</field>
            <field name="model">ems.edition</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Edition">
                    <field name="name" />
                    <field name="code" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="course_id" />
                    <field name="course_plan_id" />
					<field name="university_center_id"/>
                </tree>
            </field>
        </record>
        <record id="view_ems_edition_form" model="ir.ui.view">
            <field name="name">ems.edition.form</field>
            <field name="model">ems.edition</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Edition">
					<header>
						<button name="do_student_inscriptions" type="object" string="Load Student Inscriptions"/>
					</header>
                    <sheet>
                        <group col="4" name="main">
                            <field name="name" />
                            <field name="code" />
                            <field name="start_date" />
                            <field name="end_date" />
                            <field name="reference_date" required="1"/>
                            <field name="course_id" />
							<field name="course_plan_id" />
							<field name="university_center_id"/>
                        </group>
                        <notebook colspan="4">						
                            <page name="subjects" string="Subjects">						
								<group name="subject">
									<separator string="Subjects" colspan="4"/> 
									<field name="subject_line" nolabel="1">
										<tree string="Subjects" editable="bottom">
											<field name="subject_id" required="1"/>
											<field name="semester"/>
											<field name="week_work_load" widget="float_time"/>
											<field name="student_contact" widget="float_time"/>
											<field name="work"/>
											<field name="ects"/>
											<field name="ordering"/>
										</tree>
									</field>
								</group>
								<button name="reload_subjects" type="object" string="Reload Course Subjects"/>
							</page>
						</notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_ems_edition_search" model="ir.ui.view">
            <field name="name">ems.edition.search</field>
            <field name="model">ems.edition</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Edition">
                    <field name="code" />
                    <field name="name" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="course_id" />
                    <field name="course_plan_id" />
					<field name="university_center_id"/>
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Start Date" domain="[]"
                            context="{'group_by':'start_date'}" />
                        <filter string="End Date" domain="[]" context="{'group_by':'end_date'}" />
                        <filter string="Course" domain="[]" context="{'group_by':'course_id'}" />
                        <filter string="Course Plan" domain="[]" context="{'group_by':'course_plan_id'}" />
                        <filter string="University Center" domain="[]" context="{'group_by':'university_center_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_ems_edition_view">
            <field name="name">Editions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ems.edition</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_ems_edition_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_edition_view_form">
            <field name="act_window_id" ref="act_open_ems_edition_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ems_edition_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_edition_view_tree">
            <field name="act_window_id" ref="act_open_ems_edition_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ems_edition_tree" />
        </record>
    </data>
</openerp>
