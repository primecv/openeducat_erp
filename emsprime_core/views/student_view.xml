<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="kanban_view_student">
            <field name="name">Student Kanban</field>
            <field name="model">ems.student</field>
            <field name="arch" type="xml">
                <kanban class="o_hr_employee_kanban">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <a type="open">
                                        <img t-att-src="kanban_image('ems.student', 'photo', record.id.value)" class="oe_employee_picture"/>
                                    </a>
                                </div>
                                <div class="oe_kanban_details">
									<h3><field name="roll_number" /></h3>
                                    <h4>
                                        <a type="open">
                                            <field name="name" />
                                            <t t-if="record.middle_name.raw_value">
                                                <field name="middle_name" />
                                            </t>
                                            <t t-if="record.last_name.raw_value">
                                                <field name="last_name" />
                                            </t>
                                        </a>
                                    </h4>
                                    <ul>
                                        <li t-if="record.edition_id.raw_value">
                                            <field name="edition_id" />
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <script> $('.oe_employee_picture').load(function() {
                                if($(this).width() > $(this).height()) {
                                $(this).addClass('oe_employee_picture_wide') } });
                            </script>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_ems_student_tree" model="ir.ui.view">
            <field name="name">ems.student.tree</field>
            <field name="model">ems.student</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Student">
                    <field name="roll_number" />
                    <field name="complete_name" />
					<field name="course_id" />
                    <field name="edition_id" />
                </tree>
            </field>
        </record>
		
        <record id="view_ems_student_form" model="ir.ui.view">
            <field name="name">ems.student.form</field>
            <field name="model">ems.student</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Student">
					<header>
						<button name="action_submit" string="Submit" type="object" states="draft" class="oe_highlight" groups="emsprime_core.group_ems_applicant,emsprime_core.group_ems_back_office,emsprime_core.group_ems_back_office_admin"/>
						<button name="action_received" string="Received" type="object" states="submit" class="oe_highlight" groups="emsprime_core.group_ems_back_office,emsprime_core.group_ems_back_office_admin"/>
						<button name="action_confirm" type="object" string="Enroll" states="received" class="oe_highlight" groups="emsprime_core.group_ems_back_office,emsprime_core.group_ems_back_office_admin" invisible="1"/>
						<button name="action_reject" type="object" string="Reject" states="received" class="oe_highlight" groups="emsprime_core.group_ems_back_office,emsprime_core.group_ems_back_office_admin" invisible="1"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,submit,received" />
					</header>
                    <sheet>
                        <field name="photo" widget="image" class="oe_left oe_avatar" />
                        <div name="title_name" class="oe_title">
							<h3><field name="roll_number" class="oe_inline" attrs="{'invisible':[('roll_number','=',False)]}"/></h3>
                            <h1><table>
                                <tr>
                                <td><field name="name" required="1" placeholder="First Name" style="padding-right:10px" /></td>
                                <td><field name="middle_name" placeholder="Middle Name" style="padding-right:10px" /></td>
                                <td><field name="last_name" placeholder="Last Name" style="padding-right:10px" /></td>
                                </tr>
                                </table>
                            </h1>
                        </div>
                        <notebook colspan="4">
                            <page name="personal_information" string="Personal Information">
                                <group col="4" colspan="4" name="personal_detail">
                                    <field name="gender" />
                                    <field name="birth_date" />
                                    <field name="father" />		
                                    <field name="mother" />
									<separator string="Personal Id" colspan="4"/>						
                                    <field name="nationality" domain="[('level','=','1')]" context="{'form_view_ref':'emsprime_core.hr_location_country_form_view', 'default_level':'1'}" options="{'no_create':1, 'create':0}"/>
									<field name="passport_no"/>
									<field name="issue_date"/>
									<field name="issuer"/>
									<separator string="Place of Birth" colspan="4"/>
									<field name="country_id" domain="[('level','=','1')]" context="{'form_view_ref':'emsprime_core.hr_location_country_form_view', 'default_level':'1'}" options="{'no_create':1, 'create':0}"/>
									<field name="island_id" domain="[('level','=','2'),('parent_id','=',country_id)]" context="{'form_view_ref':'emsprime_core.hr_location_island_form_view', 'default_level':'2'}" options="{'no_create':1, 'create':0}"/>
									<field name="county_id" domain="[('level','=','3'),('parent_id','=',island_id)]" context="{'form_view_ref':'emsprime_core.hr_location_county_form_view', 'default_level':'3'}" options="{'no_create':1, 'create':0}"/>
									<field name="parish_id" domain="[('level','=','4'),('parent_id','=',county_id)]" context="{'form_view_ref':'emsprime_core.hr_location_parish_form_view', 'default_level':'4'}" options="{'no_create':1, 'create':0}"/>
                                </group>
                            </page>
                            <page name="educational" string="Educational" groups="emsprime_core.group_ems_student,emsprime_core.group_ems_faculty,emsprime_core.group_ems_back_office,emsprime_core.group_ems_back_office_admin">
								<group colspan="4" attrs="{'invisible':[('course_id','!=',False)]}">
									<div>
										<h2 style="color:#f86242;">Student does not have active Enrollment!</h2>
									</div>
								</group>
                                <group col="4" colspan="4">
									<field name="course_id" readonly="1" attrs="{'invisible':[('course_id','=',False)]}"/>
                                    <field name="edition_id" context="{'get_parent_edition':1}" readonly="1" attrs="{'invisible':[('edition_id','=',False)]}"/>
                                    <field name="course_ids" widget="many2many_tags" placeholder="Select Student Courses...." invisible="1"/> <!-- not required for now -->
                                    <field name="gr_no" invisible="1"/> <!-- not required for now -->
                                    <separator colspan="4" string="Assigned Roll Numbers" />
                                    <field name="roll_number_line" colspan="4" nolabel="1"
                                        context="{'default_edition_id':edition_id}" >
										<tree string="Enrollment">
								            <field name="roll_number" />
								            <field name="course_id" />
								            <field name="edition_id" />
											<field name="type" />
											<field name="create_date" string="Date"/>
										</tree>
										<form string="Enrollment">
											<group col="4">
										        <field name="roll_number" />
										        <field name="course_id" />
										        <field name="edition_id" context="{'course_id': course_id,'get_parent_edition':1}" />
												<field name="academic_year" required="1" />
												<field name="type" />
											</group>
											<group string="Subjects" attrs="{'invisible':[('type','!=','I')]}">
												<field name="subject_ids_copy" invisible="1"/><newline/>
												<field name="subject_ids" nolabel="1" attrs="{'invisible':[('type','!=','I')], 'readonly':[('course_id','=',False)], 'required':[('type','=','I')]}" domain="[('id','in',(subject_ids_copy[0][2]))]"/>
											</group>
										</form>
									</field>
                                </group>
                            </page>						
                            <page name="contacts" string="Contacts">
                                <group col="4" colspan="4">
                                    <separator colspan="4" string="Contacts" />
                                    <field name="phone" />
                                    <field name="mobile" />
                                    <field name="email" />
                                    <field name="institutional_email" />
                                </group>

								<group>
						            <group string="Academic Address">
							            <label for="street" string="Address"/>
							            <div name="div_address">
							                <field name="street" placeholder="Street..."/>
							                <field name="street2"/>
							                <div class="address_format">
							                    <field name="city" placeholder="City" style="width: 50%%"/>
							                    <field name="zip" placeholder="Postcode" style="width: 40%%"/>
							                </div>
							                <field name="acountry_id" placeholder="Country" class="oe_no_button" options='{"no_open": True, "create":0, "no_create":1}' domain="[('level','=','1')]"/>
							            </div>
									</group>
									<group string="Permanent Address">
										<label for="pstreet" string="Address"/>
										<div name="div_paddress">
										    <field name="pstreet" placeholder="Street..."/>
										    <field name="pstreet2"/>
										    <div class="address_format">
										        <field name="pcity" placeholder="City" style="width: 50%%"/>
										        <field name="pzip" placeholder="Postcode" style="width: 40%%"/>
										    </div>
										    <field name="pcountry_id" placeholder="Country" class="oe_no_button" options='{"no_open": True, "create":0, "no_create":1}' domain="[('level','=','1')]"/>
										</div>
									</group>
								</group>
                            </page>	
                            <page name="applications" string="Applications">
                                <group col="4" colspan="4">
                                    <separator colspan="4" string="Qualifications" />
                                    <field name="app_course_year" />
                                    <field name="app_course_academic_year"/>
                                    <field name="app_course_area"/>
									<field name="high_school_score"/>
                                    <field name="final_average"/>
                                    <field name="math_final_average"/>
                                    <field name="portuguese_final_average"/>
								</group>
								<group string="Options" colspan="4">
									<group>
		                                <field name="course_option_1" domain="[('is_active','=',True)]"/>
		                                <field name="course_option_2" domain="[('is_active','=',True)]"/>
		                                <field name="course_option_3" domain="[('is_active','=',True)]"/>
									</group>
									<group>
	                                    <field name="university_center_id"/>
	                                    <field name="schedule_choice"/>
    	                                <field name="sponsorship"/>
									</group>
                                </group>
							</page>								
                            <page name="attachment" string="Attachments">
                                <group col="4" colspan="4">
                                    <separator colspan="4" string="Attachments" />
                                    <field name="attachment_line" colspan="4" nolabel="1">
										<tree string="Attachments">
											<field name="attachment_type_id" />
											<field name="attachment" filename="dates_fname" />
											<field name="dates_fname" select="1" invisible="1"/>
										</tree>
										<form string="Attachment">
											<group col="4">
										        <field name="attachment_type_id" />
										        <field name="attachment" filename="dates_fname" widget="binary" />
										        <field name="dates_fname" select="1" invisible="1" />
											</group>
										</form>
									</field>
                                </group>
                            </page>
                            <page name="system" string="System">
                                <group col="4" colspan="4">
                                    <separator colspan="4" string="System" />
                                    <field name="lang" />
                                    <field name="user_id" string="User"/>
                                </group>
							</page>
                        </notebook>
                    </sheet>
					<div class="oe_chatter">
		                <field name="message_follower_ids" widget="mail_followers"/>
		                <field name="message_ids" widget="mail_thread"/>
					</div>
                </form>
            </field>
        </record>
        <record id="view_ems_student_search" model="ir.ui.view">
            <field name="name">ems.student.search</field>
            <field name="model">ems.student</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Student">
                    <field name="name" />
                    <field name="roll_number" />
                    <field name="id_number" />
                    <field name="course_id" />
                    <field name="edition_id" />
                    <field name="state" />
                    <field name="type_current_enroll" />
					<field name="institutional_email" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter name="course" string="Course" domain="[]"
                            context="{'group_by':'course_id'}" />
                        <filter name="edition" string="Edition" domain="[]" context="{'group_by':'edition_id'}" />
						<filter name="university_center_id" string="University Center" domain="[]" context="{'group_by':'university_center_id'}"/>
                        <filter name="state" string="State" domain="[]" context="{'group_by':'state'}" />
                        <filter name="type_current_enroll" string="Type of current enrollment" domain="[]" context="{'group_by':'type_current_enroll'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_ems_student_view">
            <field name="name">Students</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ems.student</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,pivot,form</field>
            <field name="search_view_id" ref="view_ems_student_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
			<field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add new Students.
              </p>
			</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_student_view_form">
            <field name="act_window_id" ref="act_open_ems_student_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ems_student_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_student_view_tree">
            <field name="act_window_id" ref="act_open_ems_student_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ems_student_tree" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_ems_student_view_kanban">
            <field name="act_window_id" ref="act_open_ems_student_view" />
            <field name="sequence" eval="5" />
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="kanban_view_student" />
        </record>
    </data>
</openerp>
