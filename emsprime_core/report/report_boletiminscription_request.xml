<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_boletiminscription_request_document">
    <!--t t-call="emsprime_core.external_layout"-->
        <t t-set="p" t-value="doc.with_context({'lang':doc.enrollment_id.student_id.lang})" />
		<t t-foreach="p" t-as="o">
		<div class="header">
		    <div class="row">
		        <div class="col-xs-1" style="margin-top:15px;">
		            <img t-if="o.create_uid.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.create_uid.company_id.logo" style="max-height: 70px;"/>
		        </div>
		        <div class="col-xs-11 text-center" style="margin-top:25px;font-family:Myriad Pro Light;font-size:18px;">
					INSTITUTO SUPERIOR DE CIÊNCIAS ECONÓMICAS E EMPRESARIAIS<br/>
					POLO UNIVERSITÁRIO ­<span t-if="o.enrollment_id.student_id.university_center_id">- <span t-field="o.enrollment_id.student_id.university_center_id.name"/></span><br/>
					SERVIÇOS ACADÉMICOS
				</div>
		    </div>
		</div>

		<div class="footer">
		    <div class="text-center" style="margin-bottom:5px;font-family:Myriad Pro Light;font-size:16px;">
				Printed in <span t-esc="time.strftime('%Y-%m-%d')"/> <span t-esc="time.strftime('%H:%M')"/> by <span t-field="o.create_uid.email"/> via primeEMS.iscee.edu.cv © ISCEE 2016
		    </div>
		</div>

        <div class="page">
			<div align="center" style="color:#333333;font-family:Myriad Pro Light;font-size:18px;"><strong>INSCRIPTION ENROLLMENT <span t-if="o.sequence">​Nº <span t-field="o.sequence"/></span></strong></div><br/>
            
			<div class="row" style="color:333333;font-family:Myriad Pro Light;font-size:16px;">
				<div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden; margin:10px 0;"/> 
				
				<span style="color:333333;font-family:Myriad Pro;font-size:18px;"><strong>Personal Data </strong></span><br />

				<span style="color:333333;font-family:Myriad Pro;"><strong>Name</strong></span>: <span t-field="o.enrollment_id.student_id.complete_name" style="text-transform:uppercase;"/> ***<br/>
				<span style="color:333333;font-family:Myriad Pro;"><strong>Birth Date</strong></span>: <span t-field="o.enrollment_id.student_id.birth_date"/> ***<br/>
				<span style="color:333333;font-family:Myriad Pro;"><strong>Place of Birth</strong></span>: <span t-field="o.enrollment_id.student_id.parish_id.name"/><span t-if="o.enrollment_id.student_id.county_id.name"> / </span> 
				<span t-field="o.enrollment_id.student_id.county_id.name"/><span t-if="o.enrollment_id.student_id.island_id.name"> / </span>
				<span t-field="o.enrollment_id.student_id.island_id.name"/><span t-if="o.enrollment_id.student_id.country_id.name"> / </span>
				<span t-field="o.enrollment_id.student_id.country_id.name"/> ***<br/>
				<span style="color:333333;font-family:Myriad Pro;"><strong>Nationality</strong></span>: <span t-field="o.enrollment_id.student_id.nationality.citizenship"/> ***<br/>
				<span style="color:333333;font-family:Myriad Pro;"><strong>Filiation</strong></span>: <span t-field="o.enrollment_id.student_id.father"/>
				<span t-if="o.enrollment_id.student_id.mother"> e <span t-field="o.enrollment_id.student_id.mother"/></span> ***<br/>

				<span style="color:333333;font-family:Myriad Pro;"><strong>Identification</strong></span>: <span t-field="o.enrollment_id.student_id.passport_no"/><span t-if="o.enrollment_id.student_id.issue_date"> - </span> 
				<span t-field="o.enrollment_id.student_id.issue_date"/><span t-if="o.enrollment_id.student_id.issuer"> - </span>
				<span t-field="o.enrollment_id.student_id.issuer"/> ***<br/>

				<div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden; margin:10px 0;"/> 

				<span style="color:333333;font-family:Myriad Pro;font-size:18px;"><strong>Enrollment Data  </strong></span><br />

				<span style="color:333333;font-family:Myriad Pro;"><strong>Student Number</strong></span>: <span t-field="o.enrollment_id.student_id.roll_number"/> ***<br/>
				<span style="color:333333;font-family:Myriad Pro;"><strong>Course</strong></span>: <span t-field="o.enrollment_id.course_id.name"/> ***<br/>
				<span style="color:333333;font-family:Myriad Pro;"><strong>Year</strong></span>: <span t-if="o.enrollment_id.academic_year"><span t-field="o.enrollment_id.academic_year"/></span> ***<br/>

				<div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden; margin:10px 0;"/> 

				<span style="color:333333;font-family:Myriad Pro;font-size:18px;"><strong>Inscription - Academic Year / Course Year</strong></span><br />
				<strong><span t-if="o.current_inscription_id.academic_year"><span t-field="o.current_inscription_id.academic_year"/>:</span></strong> <span t-if="o.current_inscription_id.course_year"><span t-field="o.current_inscription_id.course_year"/>º ano</span> ***<br/>

				<div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden; margin:10px 0;"/> 

				<span style="color:333333;font-family:Myriad Pro;font-size:18px;"><strong>Special mentions</strong></span><br />
				<span t-field="o.description"/> ***<br/>
				
				<div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden; margin:10px 0;"/> 

				<span style="color:333333;font-family:Myriad Pro;font-size:18px;"><strong>Declaration Data  </strong></span><br />
				
				<span style="color:333333;font-family:Myriad Pro;"><strong>Applicant</strong></span>: <span t-field="o.enrollment_id.student_id.complete_name" style="text-transform:uppercase;"/> ***<br/>
				<span style="color:333333;font-family:Myriad Pro;"><strong>Request Date</strong></span>: <span t-esc="o.date"/> ***<br/>
				<span style="color:333333;font-family:Myriad Pro;"><strong>Issue Date</strong></span>: <span t-esc="time.strftime('%Y/%m/%d')"/> ***

				<div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden; margin:10px 0;"/> 
				
				<div>
					At the request of <span style="color:333333;font-family:Myriad Pro;"><strong><span t-field="o.enrollment_id.student_id.complete_name" style="text-transform:uppercase;"/></strong></span> and for appropriate action, we emit the present notarized statement with the stamp in use in this institution ***
				</div>

            </div>

        </div>

    </t>
</template>

<template id="report_boletiminscription_request">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="emsprime_core.report_boletiminscription_request_document" t-lang="doc.enrollment_id.student_id.lang"/>
        </t>
    </t>
</template>
</data>
</openerp>
