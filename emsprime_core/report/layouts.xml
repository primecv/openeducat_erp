<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="emsprime_core.external_layout">
    <!-- Multicompany -->
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>
    <t t-call="emsprime_core.external_layout_header" />
    <t t-raw="0" />
    <t t-call="emsprime_core.external_layout_footer" />
</template>

<template id="emsprime_core.external_layout_header">
    <div class="header">
        <div class="row">
            <div class="col-xs-1" style="margin-top:15px;">
                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 70px;"/>
            </div>
            <div class="col-xs-11 text-center" style="margin-top:25px;">
				INSTITUTO SUPERIOR DE CIÊNCIAS ECONÓMICAS E EMPRESARIAIS<br/>
			    POLO UNIVERSITÁRIO ­ SÃO VICENTE<br/>
			    SERVIÇOS ACADÉMICOS
			</div>
        </div>
    </div>
</template>

<template id="emsprime_core.external_layout_footer">
    <div class="footer">
        <div class="text-center" style="margin-bottom:5px;">
			Recebido em <span t-esc="time.strftime('%Y-%m-%d')"/> <span t-esc="time.strftime('%H:%M')"/> por <span t-field="user.email"/> via primeEMS.iscee.edu.cv © ISCEE 2016
        </div>
    </div>
</template>

<template id="emsprime_core.internal_layout">
    <!-- Multicompany -->
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>

    <div class="header">
        <div class="row">
            <div class="col-xs-3">
                <span t-esc="time.strftime('%Y-%m-%d')"/>
                <span t-esc="time.strftime('%H:%M')"/>
            </div>
            <div class="col-xs-2 col-xs-offset-2 text-center">
                <span t-esc="company.name"/>
            </div>
            <div class="col-xs-2 col-xs-offset-3 text-right">
                <ul class="list-inline">
                    <li><span class="page"/></li>
                    <li>/</li>
                    <li><span class="topage"/></li>
                </ul>
            </div>
        </div>
    </div>
    <t t-raw="0" />
</template>

</data>
</openerp>
