<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_admissionreceipt_document">
    <!--t t-call="emsprime_core.external_layout"-->
        <t t-set="p" t-value="doc.with_context({'lang':doc.lang})" />
		<t t-foreach="p" t-as="o">
		<div class="header">
		    <div class="row">
		        <div class="col-xs-1" style="margin-top:15px;">
		            <img t-if="o.create_uid.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.create_uid.company_id.logo" style="max-height: 70px;"/>
		        </div>
		        <div class="col-xs-11 text-center" style="margin-top:25px;">
					INSTITUTO SUPERIOR DE CIÊNCIAS ECONÓMICAS E EMPRESARIAIS<br/>
					POLO UNIVERSITÁRIO ­<span t-if="o.university_center_id">- <span t-field="o.university_center_id.name"/></span><br/>
					SERVIÇOS ACADÉMICOS
				</div>
		    </div>
		</div>

		<div class="footer">
		    <div class="text-center" style="margin-bottom:5px;">
				Recebido em <span t-esc="time.strftime('%Y-%m-%d')"/> <span t-esc="time.strftime('%H:%M')"/> por <span t-field="o.create_uid.email"/> via primeEMS.iscee.edu.cv © ISCEE 2016
		    </div>
		</div>

        <div class="page">
			<div align="center" style="color:#333333;"><strong>STUDENT APPLICATION <span t-if="o.roll_number">​Nº <span t-field="o.roll_number"/></span></strong></div><br/>
            
			<div class="row" style="color:333333;">
				<div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden;"/>
				
				<strong>Personal Data </strong> <br/>

				<strong>Name</strong>: <span t-field="o.complete_name" style="text-transform:uppercase;"/> ***<br/>
				<strong>Birth Date</strong>: <span t-field="o.birth_date"/> ***<br/>
				<strong>Place of Birth</strong>: <span t-field="o.parish_id.name"/><span t-if="o.county_id.name"> / </span> 
				<span t-field="o.county_id.name"/><span t-if="o.island_id.name"> / </span>
				<span t-field="o.island_id.name"/><span t-if="o.country_id.name"> / </span>
				<span t-field="o.country_id.name"/> ***<br/>
				<strong>Nationality</strong>: <span t-field="o.nationality.citizenship"/> ***<br/>
				<strong>Filiation</strong>: <span t-field="o.father"/>
				<span t-if="o.mother"> e <span t-field="o.mother"/></span> ***<br/>

				<strong>Identification</strong>: <span t-field="o.passport_no"/><span t-if="o.issue_date"> - </span> 
				<span t-field="o.issue_date"/><span t-if="o.issuer"> - </span>
				<span t-field="o.issuer"/> ***<br/>

				<br/><div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden;"/> 

				<strong>Contact Details</strong><br/>

				<strong>Phone</strong>: <span t-field="o.phone"/> ***<br/>
				<strong>Mobile</strong>: <span t-field="o.mobile"/> ***<br/>
				<strong>Personal Email</strong>: <span t-field="o.email"/> ***<br/>
				<strong>Academic Residence</strong>: <span t-field="o.street"/><span t-if="o.street2">, <span t-field="o.street2"/></span><span t-if="o.city">, <span t-field="o.city"/></span><span t-if="o.zip">, <span t-field="o.zip"/></span><span t-if="o.country_id">, <span t-field="o.country_id.name"/></span> ***
				<br/>
				<strong>Permanent Residence</strong>: <span t-field="o.pstreet"/><span t-if="o.pstreet2">, <span t-field="o.pstreet2"/></span><span t-if="o.pcity">, <span t-field="o.pcity"/></span><span t-if="o.pzip">, <span t-field="o.pzip"/></span><span t-if="o.pcountry_id">, <span t-field="o.pcountry_id.name"/></span> ***
				<br/>

				<br/><div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden;"/> 

				<strong>Educational Qualification  </strong> <br/>

				<strong>Education Year</strong>: <span t-field="o.app_course_year"/> ***<br/>
				<strong>Secondary School</strong>: <span t-field="o.high_school_score"/> ***<br/>
				<strong>School Year</strong>: <span t-field="o.app_course_academic_year"/> ***<br/>
				<strong>Area</strong>: <span t-field="o.app_course_area"/> ***<br/>
				<strong>Final Average</strong>: <span t-field="o.final_average"/> ***<br/>
				<strong>Math Final Average</strong>: <span t-field="o.math_final_average"/> ***<br/>
				<strong>Average Portuguese Language</strong>: <span t-field="o.portuguese_final_average"/> ***
				<br/>

				<br/><div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden;"/>

				<strong>Application</strong><br/>
				<strong>Option 1</strong>: <span t-field="o.course_option_1.name"/> ***<br/>
				<strong>Option 2</strong>: <span t-field="o.course_option_2.name"/> ***<br/>
				<strong>Option 3</strong>: <span t-field="o.course_option_3.name"/> ***<br/>
				<strong>University Center</strong>: <span t-field="o.university_center_id.name"/> ***<br/>
				<strong>Sponsorship</strong>: <span t-if="o.sponsorship == 'own_expenses' ">Own Expenses</span>
				<span t-if="o.sponsorship == 'scholarship' ">Scholarship</span>
				<span t-if="o.sponsorship == 'company' ">Company</span> ***<br/>
				<strong>Time Preference</strong>: <span t-if="o.schedule_choice == 'morning' ">Morning</span>
				<span t-if="o.schedule_choice == 'afternoon' ">Afternoon</span>
				<span t-if="o.schedule_choice == 'evening' ">Evening</span> ***
				<br/>

				<br/><div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden;"/>

				<strong>Documents Attached </strong> (<span t-esc="len(o.attachment_line)"/>)
				<div style="color:333333;">
					<table >
						<tr t-foreach="o.attachment_line" t-as="att">
							<td> <span t-field="att.attachment_type_id.name"  style="color:333333;"/> *** </td>
						</tr>
					</table>
				</div>

				<br/><div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden;"/>
				<div class="text-center">
					<strong>*** Check the accuracy of the data in this application form.</strong>
				</div>

            </div>

        </div>

    </t>
</template>

<template id="report_admissionreceipt">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="emsprime_core.report_admissionreceipt_document" t-lang="doc.lang"/>
        </t>
    </t>
</template>
</data>
</openerp>
