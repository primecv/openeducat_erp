<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_boletiminscription_history_request_document">
    <!--t t-call="emsprime_core.external_layout"-->
        <t t-set="p" t-value="doc.with_context({'lang':doc.create_uid.lang})" />
		<t t-foreach="p" t-as="o">
		<div class="header">
		    <div class="row">
		        <div class="col-xs-12 text-center" style="color:#333333;font-family:Calibri;font-size:16px;margin-top:100px;">
					<strong>DECLARAÇÃO DE INSCRIÇÃO <span t-if="o.sequence">​Nº <span t-field="o.number"/>/ISCEE-<span t-field="o.university_center_id.code"/>/<span t-field="o.year"/></span></strong>
				</div>
		    </div>
		</div>

        <div class="page" style="margin:0 25px">
			<style type="text/css">
			<![CDATA[
			@font-face {
			  font-family: 'Calibri';
			  font-style: normal;
			  font-weight: 400;
			  src: local('Calibri'), url(https://github.com/jondot/dotfiles/blob/master/.fonts/calibri.ttf?raw=true) format('truetype');
			}
			]]>
			.tit_declaration{color:#333333;font-family:Calibri;font-size:16px;}
			.tit_section{color:333333;font-size:14px;}
			</style>
		            
			<div class="row" style="color:333333;font-family:Calibri;font-size:14px;">
				<div style="width: 100%; height: 1px; background-color:#666666; overflow: hidden; margin:10px 0;"/> 
				
				<span class="tit_section"><strong>Personal Data </strong></span><br />

				<strong>Name</strong>: <span t-field="o.enrollment_id.student_id.complete_name" style="text-transform:uppercase;"/> ***<br/>
				<strong>Birth Date</strong>: <span t-field="o.enrollment_id.student_id.birth_date"/> ***<br/>
				<strong>Place of Birth</strong>: <span t-field="o.enrollment_id.student_id.parish_id.name"/><span t-if="o.enrollment_id.student_id.county_id.name"> / </span> 
				<span t-field="o.enrollment_id.student_id.county_id.name"/><span t-if="o.enrollment_id.student_id.island_id.name"> / </span>
				<span t-field="o.enrollment_id.student_id.island_id.name"/><span t-if="o.enrollment_id.student_id.country_id.name"> / </span>
				<span t-field="o.enrollment_id.student_id.country_id.name"/> ***<br/>
				<strong>Nationality</strong>: <span t-field="o.enrollment_id.student_id.nationality.citizenship"/> ***<br/>
				<strong>Filiation</strong>: <span t-field="o.enrollment_id.student_id.father"/>
				<span t-if="o.enrollment_id.student_id.mother"> e <span t-field="o.enrollment_id.student_id.mother"/></span> ***<br/>

				<strong>Identification</strong>: <span t-field="o.enrollment_id.student_id.passport_no"/><span t-if="o.enrollment_id.student_id.issue_date"> - </span> 
				<span t-field="o.enrollment_id.student_id.issue_date"/><span t-if="o.enrollment_id.student_id.issuer"> - </span>
				<span t-field="o.enrollment_id.student_id.issuer"/> ***<br/>

				<div style="width: 100%; height: 1px; background-color:#666666; overflow: hidden; margin:10px 0;"/> 

				<span class="tit_section"><strong>Enrollment Data</strong></span><br />

				<strong>Student Number</strong>: <span t-field="o.enrollment_id.student_id.roll_number"/> ***<br/>
				<strong>Name Course</strong>: <span t-field="o.enrollment_id.course_id.degree_id.name"/> in <span t-field="o.enrollment_id.course_id.name"/> ***<br/>
				<strong>Year of the course</strong>: <span t-if="o.enrollment_id.academic_year"><span t-field="o.enrollment_id.academic_year"/></span> ***<br/>

				<div style="width: 100%; height: 1px; background-color:#666666; overflow: hidden; margin:10px 0;"/> 

				<span class="tit_section"><strong>Inscription - Academic Year / Course Year</strong></span><br />
				<div style="color:333333;">
					<t t-foreach="o.enrollment_id.student_id.roll_number_line" t-as="enrol">
						<div t-if="enrol.type == 'I' ">
							<strong><span t-esc="o.get_year(enrol.academic_year)"/>:</strong> <span t-esc="enrol.course_year"/>º ano ***<br/>
						</div>
					</t>
				</div>

				<div style="width: 100%; height: 1px; background-color:#666666; overflow: hidden; margin:10px 0;"/> 

				<span class="tit_section"><strong>Special mentions</strong></span><br />
				<span t-field="o.description"/> ***<br/>
				
				<div style="width: 100%; height: 1px; background-color:#666666; overflow: hidden; margin:10px 0;"/> 

				<span class="tit_section"><strong>Declaration Data</strong></span><br />
				
				<strong>Applicant</strong>: <span t-field="o.enrollment_id.student_id.complete_name" style="text-transform:uppercase;"/> ***<br/>
				<strong>Request Date</strong>: <span t-esc="o.date"/> ***<br/>
				<strong>Issue Date</strong>: <span t-esc="time.strftime('%Y-%m-%d')"/> ***

				<div style="width: 100%; height: 1px; background-color:#666666; overflow: hidden; margin:10px 0;"/> 
				
				<div>
					At the request of <strong><span t-field="o.enrollment_id.student_id.complete_name" style="text-transform:uppercase;"/></strong> and for appropriate action, we emit the present notarized statement with the stamp in use in this institution ***
				</div>

            </div>

        </div>
		<div class="footer">
		    <div style="margin-bottom:80px;font-family:Calibri;font-size:9px;margin-left:5px;">
				<span style="line-height:10px;">Pólo Universitário ­<span t-if="o.enrollment_id.student_id.university_center_id">- <span t-field="o.enrollment_id.student_id.university_center_id.name"/></span></span><br/>
				<span style="line-height:10px;">Processado por computador por <br/><span t-field="o.create_uid.email"/> em <span t-esc="time.strftime('%Y-%m-%d')"/> <span t-esc="time.strftime('%H:%M')"/></span><br/><br/><br/><br/><br/><br/>
		    </div>
		</div>

    </t>
</template>

<template id="report_boletiminscription_history_request">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="emsprime_core.report_boletiminscription_history_request_document" t-lang="doc.create_uid.lang"/>
        </t>
    </t>
</template>
</data>
</openerp>
