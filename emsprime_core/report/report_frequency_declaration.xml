<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_frequency_declaration_document">
    <!--t t-call="emsprime_core.external_layout"-->
        <t t-set="p" t-value="doc.with_context({'lang':doc.student_id.lang})" />
		<t t-foreach="p" t-as="o">
		<div class="header">
		    <div class="row">
		        <div class="col-xs-1" style="margin-top:15px;">
		            <img t-if="o.enrollment_id.student_id.create_uid.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.create_uid.company_id.logo" style="max-height: 70px;"/>
		        </div>
		        <div class="col-xs-11 text-center" style="margin-top:25px;">
					INSTITUTO SUPERIOR DE CIÊNCIAS ECONÓMICAS E EMPRESARIAIS<br/>
					POLO UNIVERSITÁRIO ­<span t-if="o.enrollment_id.student_id.university_center_id">- <span t-field="o.enrollment_id.student_id.university_center_id.name"/></span><br/>
					SERVIÇOS ACADÉMICOS
				</div>
		    </div>
		</div>

		<div class="footer">
		    <div class="text-center" style="margin-bottom:5px;">
				Impresso em <span t-esc="time.strftime('%Y-%m-%d')"/> <span t-esc="time.strftime('%H:%M')"/> por <span t-field="o.enrollment_id.student_id.create_uid.email"/> via primeEMS.iscee.edu.cv © ISCEE 2016
		    </div>
		</div>

        <div class="page">
			<div align="center" style="color:#333333;"><strong>FREQUENCY DECLARATION <span t-if="o.enrollment_id.roll_number">​Nº <span t-field="o.sequence"/></span></strong></div>
            
			<div class="row" style="color:333333;">
				<div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden; margin:10px 0;"/> 
			
				<strong>Personal Data </strong> <br/>

				<strong>Name</strong>: <span t-field="o.enrollment_id.student_id.complete_name" style="text-transform:uppercase;"/> ***<br/>
				<strong>Birth Date</strong>: <span t-field="o.enrollment_id.student_id.birth_date"/> ***<br/>
				<strong>Place of Birth</strong>: <span t-field="o.enrollment_id.student_id.parish_id.name"/><span t-if="o.enrollment_id.student_id.county_id.name"> / </span> 
				<span t-field="o.enrollment_id.student_id.county_id.name"/><span t-if="o.enrollment_id.student_id.island_id.name"> / </span>
				<span t-field="o.enrollment_id.student_id.island_id.name"/><span t-if="o.enrollment_id.student_id.country_id.name"> / </span>
				<span t-field="o.enrollment_id.student_id.country_id.name"/> ***<br/>
				<strong>Nationality</strong>: <span t-field="o.enrollment_id.student_id.nationality.citizenship"/> ***<br/>
				<strong>Filiation</strong>: <span t-field="o.enrollment_id.student_id.father"/>
				<span t-if="o.enrollment_id.student_id.mother"> e <span t-field="o.enrollment_id.student_id.mother"/></span> ***<br/>

				<strong>Identification</strong>: <span t-field="o.enrollment_id.student_id.passport_no"/><span t-if="o.enrollment_id.student_id.issue_date"> - </span> 
				<span t-field="o.enrollment_id.student_id.issue_date"/><span t-if="o.enrollment_id.student_id.issuer"> - </span>
				<span t-field="o.enrollment_id.student_id.issuer"/> ***<br/>

				<div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden; margin:10px 0;"/> 

				<strong>Enrollment Data  </strong> <br/>
				
				<strong>Enrollment Number</strong>: <span t-field="o.enrollment_id.roll_number"/> ***<br/>
				<strong>Course</strong>: <span t-field="o.enrollment_id.course_id.name"/> ***<br/>
				<strong>Education Year</strong>: <span t-if="o.enrollment_id.academic_year"><span t-field="o.enrollment_id.academic_year"/>/<span t-esc="o.get_to_year(o.enrollment_id.academic_year)"/></span> <span t-if="o.enrollment_id.course_year">(<span t-field="o.enrollment_id.course_year"/>º year)</span> ***<br/>

				<div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden; margin:10px 0;"/> 

				<strong>Inscription Data  </strong> <br/>
				
				<strong>Academic Year</strong>: <span t-esc="o.get_academic_year(o.enrollment_id.student_id.id)"/> ***<br/>
				<strong>Course Year</strong>: <span t-esc="o.get_course_year(o.enrollment_id.student_id.id)"/>º year ***<br/>

				<div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden; margin:10px 0;"/> 

				<strong>Declaration Data  </strong> <br/>
				
				<strong>Applicant</strong>: <span t-field="o.enrollment_id.student_id.complete_name" style="text-transform:uppercase;"/> ***<br/>
				<strong>Request Date</strong>: <span t-esc="o.date"/>º year ***<br/>
				<strong>Issue Date</strong>: <span t-esc="time.strftime('%Y/%m/%d')"/> ***

				<div style="width: 100%; height: 1px; background-color:#333333; overflow: hidden; margin:10px 0;"/> 
				
				<div>
					At the request of <strong><span t-field="o.enrollment_id.student_id.complete_name" style="text-transform:uppercase;"/></strong> and for appropriate action, we emit the present notarized statement with the stamp in use in this institution ***
				</div>

            </div>

        </div>

    </t>
</template>

<template id="report_frequency_declaration">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="emsprime_core.report_frequency_declaration_document" t-lang="doc.student_id.lang"/>
        </t>
    </t>
</template>
</data>
</openerp>
